<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemMenuDescriptionActivity">

    <Button
        android:id="@+id/backButtonItemMenuDescriptonActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="35dp"
        android:theme="@style/WhiteButton"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/arrow_back_icon" />

    <ImageView
        android:id="@+id/iv_meal_item_description_activity"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:scaleType="centerCrop"
        tools:src="@drawable/placeholder" />

    <View
        android:layout_width="0dp"
        android:layout_height="242dp"
        android:background="@drawable/image_view_bottom_bar"
        app:layout_constraintBottom_toBottomOf="@id/iv_meal_item_description_activity"
        app:layout_constraintEnd_toEndOf="@id/iv_meal_item_description_activity"
        app:layout_constraintStart_toStartOf="@id/iv_meal_item_description_activity" />

    <TextView
        android:id="@+id/item_menu_description_activity_meal_name"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/total_white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_meal_item_description_activity"
        app:layout_constraintStart_toStartOf="@id/iv_meal_item_description_activity"
        tools:text="Salada com molho" />

    <TextView
        android:id="@+id/item_menu_description_activity_meal_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/iv_meal_item_description_activity"
        tools:text="Sed ut perspiciatis, unde omnis iste natus error sit voluptatem accusant doloremque laudantium, totam rem aperiam eaque ipsa, quae ab illo inventore veritatis." />

</androidx.constraintlayout.widget.ConstraintLayout>