<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/restaurantCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurantImage"
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/shrimp" />

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/restaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/restaurant_card_item_horizontal_internal_margin_default"
                android:layout_marginEnd="@dimen/restaurant_card_item_horizontal_internal_margin_default"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#1F2D3D"
                android:textSize="36sp"
                tools:text="Tony Roma's" />

            <TextView
                android:id="@+id/restaurantAdress"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="@dimen/restaurant_card_item_horizontal_internal_margin_default"
                android:layout_marginEnd="@dimen/restaurant_card_item_horizontal_internal_margin_default"
                tools:text="Av. Lavandisca, 717 - Indianópolis, São Paulo" />

            <TextView
                android:layout_marginStart="@dimen/restaurant_card_item_horizontal_internal_margin_default"
                android:layout_marginEnd="@dimen/restaurant_card_item_horizontal_internal_margin_default"
                android:id="@+id/restaurantClosingHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:maxLines="1"
                tools:text="Fecha às 22:00" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>